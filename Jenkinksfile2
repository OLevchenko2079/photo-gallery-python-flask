pipeline {
    agent none
    stages {
        stage('Salt') {
            steps {
                salt(authtype: 'pam', clientInterface: local(arguments: '"sleep 3; ls -la"', blockbuild: true, function: 'cmd.run', jobPollTime: 6, target: '*', targettype: 'glob'), credentialsId: 'saltuser', saveFile: true, servername: 'https://salt:8088')
                script {
                    env.WORKSPACE = pwd()
                    def output = readFile "${env.WORKSPACE}/saltOutput.json"
                    echo output
                }
            }

        }
    }
}